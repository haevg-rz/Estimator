<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Async estimation</h4>
                <button type="button" class="close" @onclick="@ClosePage">&times;</button>
            </div>
            <div class="modal-body">
                <p>Save the RoomId: @RoomId</p>
                <button type="button" class="btn btn-outline-primary" @onclick="@CopyRoomId">Copy Estimator-Uri</button>
            </div>
            <div class="modal-body">
                <p>Save your Hostname: @HostName</p>
                <button type="button" class="btn btn" @onclick="@CopyHostname">Save host-Uri</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@OpenHostPage">Ok</button>
            </div>
        </div>
    </div>
</div>