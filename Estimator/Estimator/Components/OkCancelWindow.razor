<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Warning</h4>
                <button type="button" class="close" @onclick="@this.ClosePage">&times;</button>
            </div>
            <div class="modal-body">
                <div>@this.Message</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@CloseCancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="@CloseOk">Ok</button>
            </div>
        </div>
    </div>
</div>